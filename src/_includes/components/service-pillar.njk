{% set servicePillars = [
    {
        title: "Strategic Insights",
        services: ["Creating Visibility", "Planning Support"]
    },
    {
        title: "Operational Excellence",
        services: ["Activation", "GTM Enablement"]
    },
    {
        title: "Leadership & Strategy",
        services: ["People", "Strategic Advisory"]
    }
] %}

{% for pillar in servicePillars %}
<div class="bg-white p-6 rounded-lg shadow-md">
    <h3 class="text-2xl font-serif font-bold text-secondary mb-4">{{ pillar.title }}</h3>
    <ul class="list-disc list-inside">
        {% for service in pillar.services %}
        <li>{{ service }}</li>
        {% endfor %}
    </ul>
</div>
{% endfor %}