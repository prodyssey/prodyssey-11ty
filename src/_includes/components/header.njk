<header class="bg-primary text-white">
    <nav class="container mx-auto px-6 py-6 flex justify-between items-center">
        <div class="flex items-center">
            <svg class="w-10 h-10 mr-2" viewBox="0 0 100 100">
                <!-- Replace this with your actual SVG logo -->
                <path d="M10,10 L90,10 L90,90 L10,90 Z" fill="currentColor"/>
            </svg>
            <span class="text-2xl font-serif font-bold">Prodyssey</span>
        </div>
        <ul class="flex space-x-6">
            <li><a href="/" class="hover:text-accent transition duration-300">Home</a></li>
            <li class="relative group">
                <a href="/services" class="hover:text-accent transition duration-300">Services</a>
                <ul class="absolute left-0 mt-2 w-48 bg-white text-primary rounded-md shadow-lg hidden group-hover:block">
                    {% for pillar in collections.servicePillars | sort(attribute='data.order') %}
                    <li class="relative group">
                        <a href="{{ pillar.url }}" class="block px-4 py-2 hover:bg-gray-100">{{ pillar.data.title }}</a>
                        <ul class="absolute left-full top-0 w-48 bg-white rounded-md shadow-lg hidden group-hover:block">
                            {% set pillarCategories = collections.serviceCategories | filterByPillar(pillar.data.title) %}
                            {% for category in pillarCategories | sort(attribute='data.order') %}
                            <li><a href="{{ category.url }}" class="block px-4 py-2 hover:bg-gray-100">{{ category.data.title }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                    {% endfor %}
                </ul>
            </li>
            <li><a href="/about" class="hover:text-accent transition duration-300">About</a></li>
            <li><a href="/blog" class="hover:text-accent transition duration-300">Blog</a></li>
            <li><a href="/contact" class="hover:text-accent transition duration-300">Contact</a></li>
        </ul>
    </nav>
</header>