<section class="text-center py-16 px-4 bg-circuit-pattern bg-opacity-5">
    <div class="container mx-auto">
        <h1 class="text-5xl font-serif font-bold text-primary mb-4">Your Guide to Profitable SaaS Growth</h1>
        <p class="text-xl mb-8">Specializing in Services for Data Powered SaaS for Marketing, Sales, CX, and the whole customer journey</p>
        <a href="/contact" class="bg-accent text-white px-8 py-3 rounded-full hover:bg-secondary transition duration-300">Start Your Journey</a>
    </div>
</section>

<section class="bg-secondary p-8 rounded-lg my-16 bg-greek-pattern bg-opacity-10">
    <div class="container mx-auto">
        <h2 class="text-3xl font-serif font-bold mb-4"><a href="/ptde-framework" class="hover:underline">The Prodyssey PTDE Framework</a></h2>
        <p class="text-primary mb-4">Our trenches-tested approach to SaaS Product, Tech, Data, and Enablement for Profitable Growth</p>
        <a href="/ptde-framework" class="text-accent hover:underline">Learn More →</a>
    </div>
</section>

<section class="my-16 px-4">
    <div class="container mx-auto">
        
        <h2 class="text-3xl font-serif font-bold text-primary mb-8 text-center">Services</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        
            {% for pillar in collections.servicePillars | sort(attribute='data.order') %}
        
            <div class="bg-white p-6 rounded-lg shadow-md">
        
                <h3 class="text-2xl font-serif font-bold text-secondary my-2">{{ pillar.data.title }}</h3>
        
                <p class="my-4">{{ pillar.templateContent | safe }}</p>
        
                {% set pillarCategories = collections.serviceCategories | filterByPillar(pillar.data.title) %}
        
                {% if pillarCategories.length > 0 %}
                    <div class="mt-6">
                    {% for category in pillarCategories | sort(attribute='data.order') %}
                    <h4 class="text-xl font-serif font-bold text-secondary p-4">{{ category.data.title }}</h4>

                    <ul class="list-disc list-inside mb-2 p-2">
                        {% set categoryServices = collections.services | filterByCategory(category.data.title) %}
                        {% if categoryServices and categoryServices.length > 0 %}
                            {% for service in categoryServices | sort(attribute='data.order') %}
                            <li class="my-2"><a href="/services/{{ service.data.slug }}">{{ service.data.title }}</a></li>
                            {% endfor %}
                        {% else %}
                            <li>No services found for category: {{ category.data.title }}</li>
                        {% endif %}
                    </ul>
                    {% endfor %}
                    </div>
                {% else %}
                    <p>No categories found for pillar: {{ pillar.data.title }}</p>
                {% endif %}
        
                <a href="{{ pillar.url }}" class="text-accent hover:underline">Learn More →</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<section class="my-16 px-4">
    <div class="container mx-auto">
        <h2 class="text-3xl font-serif font-bold text-primary mb-8">Latest Posts</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {% for post in collections.posts | reverse | limit(3) %}
                {% include "components/blog-post-card.njk" %}
            {% endfor %}
        </div>
        <div class="text-center mt-8">
            <a href="/posts" class="text-accent hover:underline">View All Posts →</a>
        </div>
    </div>
</section>

