<section class="my-16 px-4">
    <div class="container mx-auto">
        
        <h2 class="text-3xl font-serif font-bold text-primary mb-8 text-center">Services</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        
            {% for pillar in collections.servicePillars | sort(attribute='data.order') %}
        
            <div class="bg-white p-6 rounded-lg shadow-md">
        
                <h3 class="text-2xl font-serif font-bold text-secondary my-2">{{ pillar.data.title }}</h3>
        
                <p class="my-4">{{ pillar.templateContent | safe }}</p>
        
                {% set pillarCategories = collections.serviceCategories | filterByPillar(pillar.data.title) %}
        
                {% if pillarCategories.length > 0 %}
                    <div class="mt-6">
                    {% for category in pillarCategories | sort(attribute='data.order') %}
                    <h4 class="text-xl font-serif font-bold text-secondary p-4">{{ category.data.title }}</h4>

                    <ul class="list-disc list-inside mb-2 p-2">
                        {% set categoryServices = collections.services | filterByCategory(category.data.title) %}
                        {% if categoryServices and categoryServices.length > 0 %}
                            {% for service in categoryServices | sort(attribute='data.order') %}
                            <li class="my-2"><a href="/services/{{ service.data.slug }}">{{ service.data.title }}</a></li>
                            {% endfor %}
                        {% else %}
                            <li>No services found for category: {{ category.data.title }}</li>
                        {% endif %}
                    </ul>
                    {% endfor %}
                    </div>
                {% else %}
                    <p>No categories found for pillar: {{ pillar.data.title }}</p>
                {% endif %}
        
                <a href="{{ pillar.url }}" class="text-accent hover:underline">Learn More →</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

